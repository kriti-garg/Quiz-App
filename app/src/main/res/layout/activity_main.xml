<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.kriti.quizapp.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/ques1"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/dna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonFirst"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques1_option1"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonFirst"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques1_option2"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/cia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonFirst"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques1_option3"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/ques2"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/oxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques2_option1"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/oxide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques2_option2"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/dioxide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques2_option3"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/impurified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/ques2_option4"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/ques3"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/myEdit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/ans"
            android:inputType="textCapWords"
            android:onClick="isRight"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/ques4"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ribo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques4_option1"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/plastids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques4_option2"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/golgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques4_option3"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/diploid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques4_option4"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/ques5"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/copper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques5_option1"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques5_option2"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques5_option3"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/chromium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/ques5_option4"
            android:textSize="15sp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="46dp"
                android:layout_marginRight="46dp"
                android:onClick="onSubmit"
                android:text="@string/submit" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:onClick="gradingInfo"
                android:text="@string/grading" />
        </RelativeLayout>

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:inputType="textCapWords"
            android:onClick="onSubmit"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>

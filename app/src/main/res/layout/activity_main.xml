<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kriti.quizapp.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1. What is Deoxyribonucleic acid commonly referred to as ?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/dna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonFirst"
                android:paddingLeft="5dp"
                android:text="DNA"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonFirst"
                android:paddingLeft="5dp"
                android:text="RBA"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/cia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonFirst"
                android:paddingLeft="5dp"
                android:text="CIA"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="2.Commercial nitric acid is coloured because it contains dissolved :"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/oxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:text="Oxygen"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/oxide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:text="Nitrogen Oxide"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/dioxide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:text="Nitrogen Dioxide"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/impurified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="onRadioButtonSecond"
                android:paddingLeft="5dp"
                android:text="Coloured Impurified"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3. Which gas is used for artificial fruit ripening of green fruits"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/myEdit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Answer"
            android:inputType="textCapWords"
            android:onClick="isRight"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="4. Name two organelles of a eukaryotic cell :(multichoice)"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ribo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:text="Ribosome"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/plastids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:text="Plastids"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/golgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:text="Golgi Apparatus"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/diploid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxFirst"
            android:paddingLeft="5dp"
            android:text="Diploid"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="5. Alloy used in fuse wire are: (multichoice)"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/copper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:text="Copper"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:text="Tin"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:text="Lead"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/chromium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onCheckboxSecond"
            android:paddingLeft="5dp"
            android:text="Chromium"
            android:textSize="15sp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="46dp"
                android:layout_marginRight="46dp"
                android:layout_weight="1"
                android:onClick="onSubmit"
                android:text="Submit" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:onClick="gradingInfo"
                android:text="Grading" />
        </RelativeLayout>

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textCapWords"
            android:onClick="onSubmit"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </LinearLayout>
</ScrollView>
